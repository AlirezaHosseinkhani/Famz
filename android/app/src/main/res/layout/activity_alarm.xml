<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Video Background -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <!-- Overlay Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_gradient">

        <!-- Time Display -->
        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="06:30"
            android:textColor="#FFFFFF"
            android:textSize="72sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light" />

        <!-- Date Display -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Monday, January 15"
            android:textColor="#CCFFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />

        <!-- Logo -->
<!--        <ImageView-->
<!--            android:id="@+id/logoImageView"-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:src="@drawable/famz_logo"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:contentDescription="Famz Logo" />-->

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Snooze Button -->
            <Button
                android:id="@+id/snoozeButton"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/snooze_button_bg"
                android:text="Snooze"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp" />

            <!-- Stop Button -->
            <Button
                android:id="@+id/stopButton"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:background="@drawable/stop_button_bg"
                android:text="Stop"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>